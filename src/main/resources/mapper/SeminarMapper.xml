<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xmu.cms.mapper.SeminarMapper">
    <resultMap id="seminarResultMap" type="com.xmu.cms.entity.Seminar">
        <id property="seminarId" column="id" javaType="java.lang.Integer"/>
        <result property="courseId" column="course_id" javaType="java.lang.Integer"/>
        <result property="roundId" column="round_id" javaType="java.lang.Integer"/>
        <result property="seminarName" column="seminar_name" javaType="java.lang.String"/>
        <result property="introduction" column="introduction" javaType="java.lang.String"/>
        <result property="maxTeam" column="max_team" javaType="java.lang.Integer"/>
        <result property="isVisible" column="is_visible" javaType="java.lang.Integer"/>
        <result property="seminarSerial" column="seminar_serial" javaType="java.lang.Integer"/>
        <result property="enrollStartTime" column="enroll_start_time" javaType="java.sql.Timestamp"/>
        <result property="enrollEndTime" column="enroll_end_time" javaType="java.sql.Timestamp"/>
    </resultMap>

    <insert id="newSeminar" parameterType="com.xmu.cms.entity.Seminar">
        INSERT seminar (course_id, round_id, seminar_name, introduction, max_team, is_visible, seminar_serial, enroll_start_time, enroll_end_time)
        VALUE (#{courseId},
               #{roundId},
               #{topic},
               #{introduction},
               #{maxTeamNum},
               #{visible},
               #{seminarSerial},
               #{signStartTime},
               #{signEndTime})
    </insert>

    <update id="modifySeminar">
        UPDATE seminar
        SET course_id         = #{courseId},
            round_id          = #{roundId},
            seminar_name      = #{topic},
            introduction      = #{introduction},
            max_team          = #{maxTeamNum},
            is_visible        = #{visible},
            seminar_serial    = #{seminarSerial},
            enroll_start_time = #{signStartTime},
            enroll_end_time   = #{signEndTime}
        WHERE id = #{seminarId}
    </update>

    <update id="startSeminar">
        UPDATE klass_seminar
        SET seminar_status = 1
        WHERE id = #{klassSeminarId}
    </update>

    <update id="stopSeminar">
        UPDATE klass_seminar
        SET seminar_status = 2
        WHERE id = #{klassSeminarId}
    </update>

    <update id="endSeminar">
        UPDATE klass_seminar
        SET seminar_status = 3
        WHERE id = #{klassSeminarId}
    </update>

    <select id="getSeminar" parameterType="java.lang.String" resultMap="seminarResultMap">
        SELECT *
        FROM seminar
    </select>

    <select id="getAllSeminarByRoundId" parameterType="java.lang.String" resultMap="seminarResultMap">
        SELECT *
        FROM seminar
        WHERE round_id = #{roundId}
    </select>
</mapper>