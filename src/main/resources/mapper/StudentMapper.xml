<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xmu.cms.dao.StudentDao">

    <select id="getAllStudents" resultType="com.xmu.cms.entity.Student">
        SELECT * FROM student
    </select>

    <insert id="newStudent" parameterType="com.xmu.cms.entity.Student">
        INSERT INTO student(studentId, account, password, email, name, messageInterval, activation)
        VALUE (#{studentId},#{account},#{password},#{email},#{name},#{messageInterval},#{activation})
    </insert>

    <update id="modifyStudentById" parameterType="java.lang.Long">
        UPDATE student
        SET  account=#{account},password=#{password},email=#{email},name=#{name},messageInterval=#{messageInterval},activation=#{activation}
        WHERE studentId=#{studentId}
    </update>

    <delete id="deleteStudentById" parameterType="java.lang.Long">
        DELETE FROM student WHERE studentId=#{studentId}
    </delete>

</mapper>