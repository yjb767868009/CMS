<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xmu.cms.dao.TeacherDao">
    <select id="getAllTeachers" resultType="com.xmu.cms.entity.Teacher">
        SELECT * from teacher
    </select>

    <update id="modifyTeacherById">
        UPDATE teacher
        SET name=#{name},account=#{account},email=#{email}
        WHERE teacherId=#{teacherId}
    </update>

    <update id="modifyTeacherPasswordById">
        UPDATE teacher
        SET password=#{password}
        WHERE teacherId=#{teacherId}
    </update>

    <insert id="newTeacher">
        INSERT teacher
        SET teacherId=#{teacherId},account=#{account},password=#{password},email=#{email},name=#{name},messageInterval=#{messageInterval},activation=#{activation}
    </insert>

    <delete id="deleteTeacherById" parameterType="java.lang.Long">
        delete FROM teacher WHERE teacherId=#{teacherId}
    </delete>
</mapper>